{* Å ablona pro Menu modul *}

{block contentModuleMenu}
    {var $items = $moduleContent['items']}

    {block MenuItems}
        {if $items}
        <ul n:if="$items" class="items">
            {foreach $items as $item}
            <li id="Menu-item-{$item['id_item']}" class="item link--{$item['link']}">
                <a n:if="$item['reference']" href="{$item['reference']}" class="label">
                {$item['text']}
                </a>
                <span n:if="!$item['reference']" class="label">
                {$item['text']}
                </span>
                {include #MenuItems, items => $item['items']}
            </li>
            {/foreach}
        </ul>
        {/if}
    {/block}
{/block}


{block headModuleMenu}
{/block}